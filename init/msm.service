[Unit]
Description=Minecraft Server Manager
After=network.target local-fs.target
Wants=network.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/local/bin/msm start
ExecStop=/usr/local/bin/msm stop
ExecReload=/usr/local/bin/msm restart

# Allow time for graceful shutdown (player warning + world save)
# 10s player warning + 30s stop wait + buffer for large worlds
TimeoutStopSec=120

[Install]
WantedBy=multi-user.target
